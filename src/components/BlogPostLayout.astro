---
import BaseLayout from './BaseLayout.astro';


const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class='mockup-window bg-base-300 border-2 border-green-600 my-8 mb-4'>
    <div class='bg-base-200 flex flex-col justify-start space-y-2 p-4'>
      <h1 class='text-2xl font-anta'>{frontmatter.title}</h1>
      <h2 class='text-lg'>{frontmatter.description}</h2>
      <p class='text-sm'>
        Published At: {frontmatter.pubDate}
      </p>
    </div>
  </section>  
  <article class="p-4">
    <slot/>
  </article>
</BaseLayout>
