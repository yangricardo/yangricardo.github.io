---
import BaseLayout from '../BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class='w-full flex flex-col space-y-1'>
    <h1 class='text-2xl font-anta'>{frontmatter.title}</h1>
    <h2 class='text-lg'>{frontmatter.description}</h2>
    <p class="text-sm">Published At: {frontmatter.pubDate}</p>
  </section>
  <slot />
</BaseLayout>
