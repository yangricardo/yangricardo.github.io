    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={metaKeywords} />
    <meta name="msvalidate.01" content="C6F3A717BF8EED8F6AB7F0F59243EF7E" />
