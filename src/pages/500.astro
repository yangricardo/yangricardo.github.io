    <div class="flex flex-row justify-center items-center space-x-8">
      <span class="animate-bounce">
        <span class="animate-pulse">
          <img src="/favicon.svg" class="w-32 h-32 animate-slow-spin" />
        </span>
      </span>
      <span class="animate-bounce">
        <span class="animate-pulse">
          <img src="/favicon.svg" class="w-32 h-32 animate-slow-spin" />
        </span>
      </span>
      <span class="animate-bounce">
        <span class="animate-pulse">
          <img src="/favicon.svg" class="w-32 h-32 animate-slow-spin" />
