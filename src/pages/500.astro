---
import BaseLayout from "../components/BaseLayout.astro";
---

<BaseLayout>
  <div
    class="w-full h-full flex flex-col flex-grow justify-center items-center space-y-12"
  >
    <h1 class="text-3xl font-anta text-center">
      500 - Unknown Error
